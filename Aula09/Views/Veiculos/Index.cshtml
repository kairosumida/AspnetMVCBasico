@model IEnumerable<Aula09.Models.Veiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "Veiculos"))
{
    <p>
        Marca: @Html.DropDownList("Marca", "")
    </p>
    <p>
        Combustivel: @Html.DropDownList("Combustivel", "")
    </p>
    <p>
        Modelo: @Html.DropDownList("Modelo", "")
    </p>
    <p>
        Estado: @Html.DropDownList("Estado", "")
    </p>
    <p>
        @Html.TextBox("precoMin", "", new { placeholder = "Preço Minimo" }) a
        @Html.TextBox("precoMax", "", new { placeholder = "Preço Maximo" })


    </p>
    <p><input type="submit" value="Filtrar" /></p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Combustivel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publicar)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Combustivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publicar)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
