@model IEnumerable<Aula09.Models.Cidade>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Cidades"))
{
    <p>
        Estados: @Html.DropDownList("estado", "Todos");
        Cidade: @Html.TextBox("cidade")
        <input type="submit" value="Filtrar" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cidades)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cidades)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
    </tr>
}

</table>
