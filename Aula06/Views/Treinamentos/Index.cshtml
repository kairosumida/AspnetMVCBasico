@model IEnumerable<Aula06.Models.Treinamento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeTreinamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Termino)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desconto)
        </th>
        <th>
            Preço Final
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Local)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    decimal precoFinal = Convert.ToDecimal(item.Preco) - Convert.ToDecimal(item.Desconto);
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeTreinamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Termino)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desconto)
        </td>
        <td>
            @precoFinal.ToString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Local)
        </td>
    </tr>
}

</table>
